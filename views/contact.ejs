<%- include('partials/header'); %>


<h2 class="mb-4 text-primary">Contact Me</h2>

<form id="contact-form" action="/contact" method="POST" name="FeedbackForm" class="p-4 border rounded shadow-sm">
    <h3 class="mb-4">Send a Message</h3>
    
    <div class="mb-3">
        <label for="FName" class="form-label">First Name:</label>
        <input type="text" id="FName" name="FName" class="form-control" placeholder="Enter your first name" required>
    </div>

    <div class="mb-3">
        <label for="LName" class="form-label">Last Name:</label>
        <input type="text" id="LName" name="LName" class="form-control" placeholder="Enter your last name" required>
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email:</label>
        <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter your email address" required>
    </div>

    <div class="mb-3">
        <label for="comments" class="form-label">Comments:</label>
        <textarea id="comments" name="comments" class="form-control" rows="4"></textarea>
    </div>

    <p class="fw-bold mt-4 mb-2">Purpose of Contact:</p>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="personalPurpose" name="purpose" value="Personal">
        <label class="form-check-label" for="personalPurpose">Personal Purpose</label> 
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="schoolPurpose" name="purpose" value="School">
        <label class="form-check-label" for="schoolPurpose">School Purpose</label> 
    </div>

    <div class="d-flex justify-content-start mt-4">
        <button type="reset" class="btn btn-secondary me-3">Reset</button>
        <button type="submit" class="btn btn-primary">Submit <i class="fas fa-paper-plane ms-2"></i></button>
    </div>
</form>

<section id="contact-info" class="mt-5 p-4 border rounded bg-light">
    <h3 class="h4">Direct Contact Details</h3>
    <p>Email: <a href="mailto:argiris.kappos@ontariotechu.net" class="text-decoration-none">argiris.kappos@ontariotechu.net</a></p>
    <p>LinkedIn: <a href="https://ca.linkedin.com/in/argiriskappos" target="_blank" class="text-decoration-none">https://ca.linkedin.com/in/argiriskappos</a></p>
</section>

